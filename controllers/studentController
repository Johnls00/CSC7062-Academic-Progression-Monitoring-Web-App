// controllers/studentController.js


exports.showDashboard = (req, res) => {
  console.log("Rendering student dashboard:", req.session.user);
  res.render('student/student-dashboard', { title: 'Student Dashboard', user: req.session.user });
};

exports.showCourses = (req, res) => {
  const courses = []; // Replace with actual data retrieval logic
  res.render('student/courses', { title: 'My Courses', user: req.user, courses });
};

exports.showProgress = (req, res) => {
  res.render('student/progress', { title: 'Progress', user: req.user });
};

exports.showNotifications = (req, res) => {
  res.render('student/notifications', { title: 'Notifications', user: req.user });
};

exports.showProfile = (req, res) => {
  res.render('student/profile', { title: 'Profile', user: req.user });
};

