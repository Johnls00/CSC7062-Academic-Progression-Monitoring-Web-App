<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Degree Programs</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/degrees.css" />
  </head>

  <body class="container-main">
    <div class="container mTop">
      <%- include('../partials/header.ejs') %> <%-
      include('../partials/dashboard-pages-welcome.ejs') %>

      <div class="main has-background-white p-6 mtopclear mybk3 rounded-box">
        <div class="columns is-multiline">
          <div class="column is-half">
            <div class="control">
              <input
                id="DegreeSearch"
                style="vertical-align: middle"
                class="input"
                type="text"
                placeholder="Search by Progamme code or name"
              />
            </div>
          </div>
          <div class="column is-half">
            <a
              href="/admin/degree/new"
              style="vertical-align: middle"
              class="button is-primary is-pulled-right"
            >
              Add New Degree Program
            </a>
          </div>
        </div>

        <div class="column is-full is-flex is-justify-content-center is-align-items-center">
          <div class="scroll-table-container ">
            <table class="table is-fullwidth is-hoverable sticky-header">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Program Code</th>
                  <th>Program Name</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% let count = 0; %> <% degrees.forEach((degree) => { count++;%>
                <tr>
                  <td><%= count %></td>
                  <td><%= degree.program_code %></td>
                  <td><%= degree.name %></td>
                  <td>
                    <a
                      href="/admin/degree-details/<%= degree.program_id %>"
                      class="button is-primary"
                      >View details</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/degree-search.js"></script>
  </body>
</html>
