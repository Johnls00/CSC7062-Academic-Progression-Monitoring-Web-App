<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Details</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/students.css" />
  </head>

  <body class="container-main">
    <div class="container mTop" style="width: 90%">
      <%- include('../partials/header.ejs') %>
      <!-- <%- include('../partials/dashboard-pages-welcome.ejs') %> -->

      <div class="main has-background-white p-6 mtopclear mybk3 rounded-box">
        <div class="columns is-mobile">
          <div class="column has-text-left">
            <a href="" class="button is-light is-medium"
              >Produce Student Summary Report</a
            >
          </div>
          <div class="column"></div>

          <div class="column has-text-right">
            <a href="" class="button is-danger is-medium">Delete Student</a>
          </div>
        </div>

        <hr />

        <h1 class="title">Student Details</h1>

        <div class="columns is-mobile">
          <div
            class="column is-half is-flex is-justify-content-center is-align-items-center"
          >
            <figure class="image has-text-centered">
              <img
                class="is-rounded"
                style="width: 20rem; height: auto; border: 3px solid #ccc;"
                src="/images/siluete-lock-person.png"
                alt="Placeholder image"
              />
              <figcaption class="mt-2">Student Profile Image</figcaption>
            </figure>
          </div>
          <div class="column is-narrow">
            <div style="border-left: 2px solid #ccc; height: 100%"></div>
          </div>

          <!-- table with students details -->
          <div class="box">
            <form id="student-details-form ">
              <div class="columns">
                <div
                  class="column is-half has-text-weight-bold is-flex is-justify-content-center is-align-items-center"
                  style="width: 15rem"
                >
                  Student Name:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="name"
                    value="<%= student.first_name %> <%= student.last_name %>"
                    disabled
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Student Number:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="student_number"
                    value="<%= student.sId %>"
                    disabled
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Email:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="email"
                    name="email"
                    value="<%= user_data.email %>"
                    disabled
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Degree Programme:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="degree"
                    value="<%= student.program_name %>"
                    disabled
                  />
                </div>
              </div>

              <div class="has-text-right mt-4">
                <button type="button" id="edit-btn" class="button is-primary">
                  Edit Details
                </button>
                <button
                  type="submit"
                  id="save-btn"
                  class="button is-success is-hidden"
                >
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>

        <hr />

        <h1 class="title">Progression Summary</h1>

        <div class="columns is-mobile">
          <div class="column is-half has-text-weight-bold is-flex is-justify-content-center is-align-items-center">
            <div class="box">
              <table class="table is-striped is-fullwidth">
                <tbody>
                  <tr>
                    <th>Total Credits:</th>
                    <td><%= student.Total_credits_earned %></td>
                  </tr>
                  <tr>
                    <th>Average grade:</th>
                    <td><%= student.average_grade %></td>
                  </tr>
                  <tr>
                    <th>Progression Status:</th>
                    <td><%= student.progression_status %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="column is-half has-text-weight-bold is-flex is-justify-content-center is-align-items-center">
            <div class="box">Put a pie chart here</div>
          </div>
        </div>

        <hr />
        
        <div class="column is-mobile">
          <div class="column has-text-right is-full">
            <a href="" class="button is-medium is-primary">Edit Modules</a>
          </div>
        </div>

        <div class="column">
          <div class="content">
            <table class="table is-fullwidth">
              <thead>
                <tr>
                  <th>Subject Code</th>
                  <th>Subject Catalog</th>
                  <th style="width: 10rem;" >Module Name</th>
                  <th>Grade</th>
                  <th>Grade Result</th>
                  <th>Resit Grade</th>
                  <th>Resit Result</th>
                  <th>Year of study</th>
                  <th>Entry Level</th>
                </tr>
              </thead>
              <tbody>
                <% module_data.forEach((module) => { %>
                <tr>
                  
                  <td><%= module.subject_code %></td>
                  <td><%= module.subject_catalog %></td>
                  <td><%= module.module_title %></td>
                  <td>
                    <% if (module.first_grade !== null && module.first_grade !==
                    undefined) { %> <%= module.first_grade %> <% } else { %> N/A
                    <% } %>
                  </td>
                  <td>
                    <% if (module.grade_result !== null && module.grade_result
                    !== undefined) { %> <%= module.grade_result %> <% } else {
                    %> N/A <% } %>
                  </td>
                  <td>
                    <% if (module.resit_grade !== null && module.resit_grade !==
                    undefined) { %> <%= module.resit_grade %> <% } else { %> N/A
                    <% } %>
                  </td>
                  <td>
                    <% if (module.resit_result !== null && module.resit_result
                    !== undefined) { %> <%= module.resit_result %> <% } else {
                    %> N/A <% } %>
                  </td>
                  <td><%= module.academic_year %></td>
                  <td><%= module.entry_level %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!-- </div> -->
        </div>


      </div>
    </div>
    <script src="/js/edit-student-details.js"></script>
  </body>
</html>
