<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>

  <body class="container-main">
    <div class="container mTop">
       <%#  Navigation header partial  %>
       <%- include('../partials/header.ejs') %>
       <%# Header banner partical for each page with page specific information %>
       <%- include('../partials/dashboard-pages-welcome.ejs') %>


       <div class="main has-background-white p-6 mtopclear mybk3 rounded-box">
        <div class="columns is-mobile">
          <div class="column has-text-left">
            <a href="" class="button is-light is-medium"
              >Produce Student Summary Report</a
            >
          </div>
          <div class="column"></div>
        </div>

        <hr />
        <div class="columns is-mobile">
          <div
            class="column is-half is-flex is-justify-content-center is-align-items-center"
          >
            <figure class="image has-text-centered">
              <img
                class="is-rounded"
                style="width: 20rem; height: auto; border: 3px solid #ccc"
                src="/images/siluete-lock-person.png"
                alt="Placeholder image"
              />
              <figcaption class="mt-2">Student Profile Image</figcaption>
            </figure>
          </div>
          <div class="column is-narrow">
            <div style="border-left: 2px solid #ccc; height: 100%"></div>
          </div>

          <!-- table with students details -->
          <div class="box">
            <form
              id="student-details-form"
              method="POST"
              action="/profile/update/<%= studentData.student_id %>"
            >
              <div class="columns">
                <div
                  class="column is-half has-text-weight-bold is-flex"
                  style="width: 15rem"
                >
                  Student First Name:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="first_name"
                    value="<%= studentData.first_name %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-half has-text-weight-bold is-flex"
                  style="width: 15rem"
                >
                  Student Last Name:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="last_name"
                    value="<%= studentData.last_name %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Student Number:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="sId"
                    value="<%= studentData.sId %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Email:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="email"
                    name="email"
                    value="<%= user_data.email %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Secondary Email:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="email"
                    name="secondary_email"
                    value="<%= user_data.secondary_email || null %>"
                    placeholder="No email saved"
                    disabled
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Degree Programme:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="degree"
                    value="<%= studentData.program_name %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Study Status:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="status_study"
                    value="<%= studentData.status_study %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="columns">
                <div
                  class="column is-one-third has-text-weight-bold"
                  style="width: 15rem"
                >
                  Entry level:
                </div>
                <div class="column">
                  <input
                    class="input"
                    type="text"
                    name="entry_level"
                    value="<%= studentData.entry_level %>"
                    disabled
                    readonly
                  />
                </div>
              </div>

              <div class="has-text-right mt-4">
                <button type="button" id="edit-btn" class="button is-primary">
                  Edit Details
                </button>
                <button
                  type="submit"
                  id="save-btn"
                  class="button is-success is-hidden"
                >
                  Save
                </button>
                <button
                  id="cancel-btn"
                  class="button is-light is-hidden"
                  type="button"
                >
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </div>

        <hr />

        <h1 class="title" style="padding-bottom: 2rem;">Progression Summary</h1>

        <div class="columns is-mobile">
          <div class="column is-half has-text-weight-bold is-flex is-justify-content-center is-align-items-center">
            <div class="box">
              <table class="table is-striped is-fullwidth">
                <tbody>
                  <tr>
                    <th>Total Credits:</th>
                    <% let totalCredits = 0; %> <%
                    studentRecord.creditsPassed.forEach((level) => { %> <%
                    totalCredits += level.credits_passed %> <% }) %>
                    <td><%= totalCredits %></td>
                  </tr>
                  <% studentRecord.creditsPassed.forEach((level) => { %>
                  <tr>
                  <th>Credits - <%= level.module_level %></th>
                  <td><%= level.credits_passed %></td>
                  </tr>
                  <% }) %>
                  <tr>

                  <% studentRecord.averageMarkPerYear.forEach((level) => { %>
                  <tr>
                  <th>Average - <%= level.level %></th>
                  <td><%= parseFloat(level.avg_mark).toFixed(2)%></td>
                  </tr>
                  <% }) %>
                  <tr>
                    <th>Progression Status:</th>
                    <td><%= (studentProgression.outcome && studentProgression.outcome.length > 0) ? studentProgression.outcome : 'No outcome available' %></td>
                  </tr>
                  <tr>
                  <th>Progression Details:</th>
                  <td>
                    <% if (studentProgression.reason && studentProgression.reason.length > 0) { %>
                      <ul style="list-style-type: disc; padding-left: 1.5rem;">
                        <% studentProgression.reason.forEach((reason) => { %>
                          <li><%= reason %></li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      No additional details available
                    <% } %>
                  </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div
            class="column is-half has-text-weight-bold is-flex is-justify-content-center is-align-items-center"
          >
            <div class="box"><canvas id="studentProgressionChart"></canvas></div>
          </div>
        </div>

        <hr/>

    </div>
    <script src="/js/edit-student-details-student.js"></script>
  </body>
</html>
